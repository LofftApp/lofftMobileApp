{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["/api/*"],
      // API
      "api/*": ["./api/*"],
      // Components
      "@Components/*": ["./components/*"],
      "@Screens/*": ["./screens/*"],
      // Stylesheets
      "@StyleSheets/*": ["./styles/*"],
      // Helpers
      "@Helpers/*": ["./helpers/*"],
      // Assets
      "@Assets/*": ["./Assets/*"],
      // Redux
      "@Redux/*": ["./features/*"],
      // Persistance
      "@Persistance/*": ["./persistance/"],
      // Core Redux files
      "@ReduxCore/*": ["./app/*"]
    }
  },
  "typeRoots": ["./types"]
}
