{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      // API
      "api/*": ["./api/*"],
      // Components
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      // Stylesheets
      "styleSheets/*": ["./styles/*"],
      // Helpers
      "helpers/*": ["./helpers/*"],
      // Assets
      "Assets/*": ["./Assets/*"],
      // Redux
      "reduxFeatures/*": ["./features/*"],
      // Persistance
      "persistance/*": ["./persistance/*"],
      // Core Redux files
      "reduxCore/*": ["./app/*"]
    },
    "types": ["jest", "node"]
  },
  "typeRoots": ["./types"]
}
