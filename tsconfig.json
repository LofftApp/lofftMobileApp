{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      // Firebase API
      "@Firebase/*": ["./api/firebase/*"],
      // Components
      "@Components/*": ["./components/*"],
      "@Screens/*": ["./screens/*"],
      // Stylesheets
      "@StyleSheets/*": ["./styles/*"],
      // Helpers
      "@Helpers/*": ["./helpers/*"],
      // Assets
      "@Assets/*": ["./Assets/*"],
      // Redux
      "@Redux/*": ["./features/*"]
    }
  },
  "typeRoots": ["./types"]
}
