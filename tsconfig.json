{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      // Firebase API
      "@Firebase/*": ["./api/firebase/*"],
      // Components
      "@Components/*": ["./components/*"],
      "@Screens/*": ["./screens/*"],
      // Stylesheets
      "@StyleSheets/*": ["./styles/*"],
      // Assets
      "@Assets/*": ["./Assets/*"]
    }
  }
}
