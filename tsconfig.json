{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["/api/*"],
      // API
      "api/*": ["./api/*"],
      // Components
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      // Stylesheets
      "styleSheets/*": ["./styles/*"],
      // Helpers
      "helpers/*": ["./helpers/*"],
      // Assets
      "Assets/*": ["./Assets/*"],
      // Redux
      "redux/*": ["./features/*"],
      // Persistance
      "@Persistance/*": ["./persistance/"],
      // Core Redux files
      "@ReduxCore/*": ["./app/*"]
    }
  },
  "typeRoots": ["./types"]
}
