{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      // API
      "@Api/*": ["./api/*"],
      // Components
      "@Components/*": ["./components/*"],
      "@Screens/*": ["./screens/*"],
      // Stylesheets
      "@StyleSheets/*": ["./styles/*"],
      // Helpers
      "@Helpers/*": ["./helpers/*"],
      // Assets
      "@Assets/*": ["./Assets/*"],
      // Redux
      "@Redux/*": ["./features/*"],
      // Persistance
      "@Persistance/*": ["./persistance/"],
      // Core Redux files
      "@ReduxCore/*": ["./app/*"]
    }
  },
  "typeRoots": ["./types"]
}
